# ================================
# CONFIGURACIÓN GENERAL
# ================================
NODE_ENV=development
PORT=4000

# ================================
# SEGURIDAD
# ================================
JWT_SECRET=change_this_secret_minimum_32_characters
SESSION_SECRET=change_this_session_secret_key

# ================================
# API EXTERNA
# ================================
POKEAPI_BASE=https://pokeapi.co/api/v2

# ================================
# BASE DE DATOS POSTGRESQL
# ================================
# Opción 1: Variables individuales (desarrollo local)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pokedex
DB_USER=postgres
DB_PASSWORD=123

# Opción 2: URL completa (producción - Render, Railway, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database

# ================================
# FRONTEND URL (CORS)
# ================================
FRONTEND_URL=http://localhost:5173

# ================================
# GOOGLE OAUTH (Opcional)
# ================================
# Ver GOOGLE_OAUTH_SETUP.md para obtener estas credenciales
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# ================================
# PUSH NOTIFICATIONS (Opcional)
# ================================
# Generar con: node generate-vapid-keys.js
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:your_email@example.com
